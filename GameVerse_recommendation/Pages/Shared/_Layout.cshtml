<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameVerse_recommendation.styles.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<header>
    <div class="container">
        <nav class="navbar navbar-expand-xl navbar-light bg-light">
            <div class="container-fluid fixed-top mt-1">
                <a class="navbar-brand nav" asp-page="Index">GameVerse</a>
                <div class="grid">
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#" aria-current="page">
                                    Товары
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="Register" aria-current="page">
                                    Профиль
                                </a>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-2"
                                   type="text"
                                   placeholder="Поиск игры" />
                            <button class="btn btn-outline-success"
                                    type="submit">
                                Найти
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>

    </div>
</header>

<body>

<div class="container-fluid">
    <main role="main">
        @RenderBody()
    </main>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - GameVerse - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

</html>